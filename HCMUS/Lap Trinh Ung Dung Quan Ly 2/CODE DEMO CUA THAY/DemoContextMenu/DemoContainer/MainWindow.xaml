</WrapPanel>-->
                </DockPanel>
            </TabItem>

            <TabItem Header="Orders">
                <local:CategoryUserControl />
            </TabItem>

            <TabItem Header="Report">
                <local:ProductUserControl />
            </TabItem>
        </TabControl>
    </DockPanel>
    
</Fluent:RibbonWindow>
