<Window x:Class="DemoContainer.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoContainer"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="New student's info" FontWeight="Bold" FontSize="32" Canvas.Left="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <local:StudentUserControl x:Name="studentUserControl" Width="200" Canvas.Left="31" Canvas.Top="50"/>
        <Button Name="okButton" Width="80" Height="35" Content="OK" IsDefault="True" Click="okButton_Click" Canvas.Left="76" Canvas.Top="155"/>
        <Button Width="80" Height="35" Content="Cancel" IsCancel="True" Canvas.Left="208" Canvas.Top="155"/>
    </Canvas>
</Window>
