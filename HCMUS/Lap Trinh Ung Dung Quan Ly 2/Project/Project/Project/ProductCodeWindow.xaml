<Window x:Class="Project.ProductCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="ProductCodeWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock Text="DANH MỤC HÀNG HÓA" Canvas.Left="298" Canvas.Top="27" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <ListView HorizontalAlignment="Center" Height="361" Margin="0,56,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="STT" Width="50"/>
                    <GridViewColumn Header="Mã hàng hóa" Width="200"/>
                    <GridViewColumn Header="Tên hàng hóa" Width="350"/>
                    <GridViewColumn Header="Đơn vị tính" Width="auto"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Canvas>
</Window>
