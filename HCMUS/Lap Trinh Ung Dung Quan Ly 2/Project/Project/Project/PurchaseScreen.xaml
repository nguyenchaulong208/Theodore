<Window x:Class="Project.PurchaseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MUA HÀNG" Height="450" Width="800">
    <Canvas>
        <TextBlock Text="Mã hàng hóa" Canvas.Left="64" Canvas.Top="29"/>
        <TextBox x:Name="idTextboxPur" HorizontalAlignment="Left" VerticalAlignment="Top" Width="154" Canvas.Left="144" Canvas.Top="29" Height="26"/>
        <TextBlock Text="Tên hàng hóa" Canvas.Left="65" Canvas.Top="75" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="productTextboxPur" Width="156" Canvas.Left="145" Canvas.Top="75" Height="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Số lượng" Canvas.Left="66" Canvas.Top="121" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="quantityTextboxPur" Width="156" Canvas.Left="146" Canvas.Top="116" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Text="Đơn giá" Canvas.Left="65" Canvas.Top="163" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="unitPriceTextboxPur" Width="156" Canvas.Left="146" Canvas.Top="163" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Text="Thành tiền" Canvas.Left="66" Canvas.Top="209" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="totalAmountTextboxPur" Width="156" Canvas.Left="146" Canvas.Top="209" Height="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Số hóa đơn" Canvas.Left="400" Canvas.Top="42" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="invNumTexboxPur" Width="156" Canvas.Left="507" Canvas.Top="34" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Text="Ngày hóa đơn" Canvas.Left="400" Canvas.Top="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="invDateTextboxPur" Width="156" Canvas.Left="507" Canvas.Top="75" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="Save" Content="Lưu" BorderBrush="Black" BorderThickness="1" Height="49" Canvas.Left="253" Canvas.Top="304" Width="131" Click="savePurcBtn_Click"/>
        <Button x:Name="Cancle" Content="Hủy" BorderBrush="Black" BorderThickness="1" Height="49" Canvas.Left="389" Canvas.Top="304" Width="131" HorizontalAlignment="Left" VerticalAlignment="Top" Click="canclePurBtn"/>
        <TextBlock Text="Mô tả sản phẩm" Canvas.Left="400" Canvas.Top="176"/>
        <TextBox x:Name="descriptionTextboxPur" Width="156" Canvas.Left="507" Canvas.Top="176" Height="49" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Năm sản xuất" Canvas.Left="400" Canvas.Top="129"/>
        <DatePicker x:Name="productYearPur" HorizontalAlignment="Left" VerticalAlignment="Center" Width="156" Canvas.Left="507" Canvas.Top="129" />
        <TextBlock Text="Thương hiệu" Canvas.Left="400" Canvas.Top="245" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="categoryProductPur" HorizontalAlignment="Center" VerticalAlignment="Top" Width="74" Canvas.Left="507" Canvas.Top="238" Height="30"/>
        <TextBox x:Name="brandProduct" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Top" Width="74" Canvas.Left="589" Canvas.Top="238" Height="30"/>
    </Canvas>
</Window>
